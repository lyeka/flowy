{
  "productName": "GTD Manager",
  "version": "0.1.0",
  "identifier": "com.gtd.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GTD Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "GTD 时间项目管理",
    "longDescription": "基于 GTD 方法论的时间和项目管理工具",
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
