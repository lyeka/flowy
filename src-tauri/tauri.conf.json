{
  "productName": "Flowy",
  "version": "0.1.0",
  "identifier": "com.flowy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Flowy",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Flowy - GTD 时间项目管理",
    "longDescription": "Flowy 是基于 GTD 方法论的优雅时间和项目管理工具",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "android": {
      "minSdkVersion": 31
    },
    "iOS": {
      "minimumSystemVersion": "14.0"
    }
  }
}
